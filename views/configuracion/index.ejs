      </header>
      
      <div class="config-container">
        
        <!-- Mensajes -->
        <% if (success === 'empresa_actualizada') { %>
          <div class="alert alert-success">
            <i data-lucide="check-circle" style="width: 20px; height: 20px;"></i>
            Informaci√≥n de la empresa actualizada correctamente
          </div>
        <% } %>
        
        <% if (success === 'tarifas_actualizadas') { %>
          <div class="alert alert-success">
            <i data-lucide="check-circle" style="width: 20px; height: 20px;"></i>
            Tarifas actualizadas correctamente
          </div>
        <% } %>
        
        <% if (success === 'notificaciones_actualizadas') { %>
          <div class="alert alert-success">
            <i data-lucide="check-circle" style="width: 20px; height: 20px;"></i>
            Configuraci√≥n de notificaciones actualizada
          </div>
        <% } %>
        
        <% if (success === 'alertas_actualizadas') { %>
          <div class="alert alert-success">
            <i data-lucide="check-circle" style="width: 20px; height: 20px;"></i>
            Configuraci√≥n de alertas actualizada
          </div>
        <% } %>
        
        <% if (success === 'tracking_actualizado') { %>
          <div class="alert alert-success">
