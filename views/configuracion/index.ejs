          <li class="nav-item">
            <a href="/clientes" class="nav-link">
              <i data-lucide="users"></i>
              <span>Clientes</span>
            </a>
          </li>
          <li class="nav-item">
            <a href="/reportes" class="nav-link">
              <i data-lucide="bar-chart"></i>
              <span>Reportes</span>
            </a>
          </li>
        </ul>
      </div>
      
      <div class="nav-section">
        <div class="nav-section-title">SISTEMA</div>
        <ul class="nav-menu">
          <li class="nav-item">
            <a href="/usuarios" class="nav-link">
              <i data-lucide="user-cog"></i>
              <span>Usuarios</span>
            </a>
          </li>
          <li class="nav-item">
            <a href="/configuracion" class="nav-link active">
              <i data-lucide="settings"></i>
              <span>Configuraci√≥n</span>
            </a>
          </li>
        </ul>
      </div>
    </aside>
    
    <!-- MAIN CONTENT -->
    <main class="main-content">
      
      <!-- HEADER -->
      <header class="header">
        <div class="welcome">
          <h1>‚öôÔ∏è Configuraci√≥n del Sistema</h1>
          <p>Administra la configuraci√≥n global de Transportes AB</p>
        </div>
        
        <div class="header-actions">
          <div class="search-box">
            <input 
              type="text" 
              class="search-input" 
              placeholder="Buscar env√≠o, cliente..."
              autocomplete="off"
            >
            <i data-lucide="search" class="search-icon"></i>
          </div>
          
          <a href="/envios-retrasados" class="notification-btn">
            <i data-lucide="bell"></i>
            <span class="notification-badge">4</span>
          </a>
          
          <div class="user-profile" id="userProfileBtn">
            <div class="user-avatar">
              <%= user.nombre ? user.nombre.charAt(0).toUpperCase() : 'A' %>
              <span class="user-status-dot"></span>
            </div>
            <div class="user-info">
              <h4><%= user.nombre || 'Usuario' %></h4>
              <p><%= user.email || 'email@ejemplo.com' %></p>
            </div>
            <i data-lucide="chevron-down" class="user-chevron"></i>
            
            <!-- Dropdown del perfil -->
            <div class="user-dropdown" id="userDropdown">
              <div class="user-dropdown-header">
                <div class="user-dropdown-avatar">
                  <%= user.nombre ? user.nombre.charAt(0).toUpperCase() : 'A' %>
                </div>
                <div class="user-dropdown-info">
                  <div class="user-dropdown-name"><%= user.nombre || 'Usuario' %></div>
                  <div class="user-dropdown-email"><%= user.email || 'email@ejemplo.com' %></div>
                  <span class="user-dropdown-badge">
                    <%= user.rol === 'admin' ? 'Administrador' : 'Operador' %>
                  </span>
                </div>
              </div>
              
              <div class="user-dropdown-divider"></div>
              
              <a href="/mi-perfil" class="user-dropdown-item">
                <i data-lucide="user"></i>
                <span>Mi perfil</span>
              </a>
              
              <div class="user-dropdown-divider"></div>
              
              <a href="/auth/logout" class="user-dropdown-item logout">
                <i data-lucide="log-out"></i>
                <span>Cerrar sesi√≥n</span>
