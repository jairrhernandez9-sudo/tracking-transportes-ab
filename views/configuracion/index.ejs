                  <input 
                    type="number" 
                    name="tarifa_por_km" 
                    class="form-input" 
                    value="<%= config.tarifas.tarifa_por_km || 0 %>"
                    step="0.01"
                    min="0"
                  >
                  <p class="form-help">Precio por km adicional (MXN)</p>
                </div>
              </div>
              
              <div class="form-row">
                <div class="form-group">
