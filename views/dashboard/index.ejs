  <script>
    lucide.createIcons();
    
    // ========================================
    // B√öSQUEDA EN TIEMPO REAL
    // ========================================
    
    let searchTimeout;
    const searchInput = document.getElementById('searchInput');
    const searchResults = document.getElementById('searchResults');
    
    // Funci√≥n de b√∫squeda
    async function buscarEnvios(query) {
      if (query.trim().length < 2) {
        searchResults.classList.remove('show');
        return;
      }
      
      // Mostrar loading
      searchResults.innerHTML = `
        <div class="search-loading">
          <div class="search-spinner"></div>
          <span>Buscando...</span>
        </div>
      `;
      searchResults.classList.add('show');
      
      try {
        const response = await fetch(`/dashboard/api/buscar?q=${encodeURIComponent(query)}`);
        const resultados = await response.json();
        
        if (resultados.length === 0) {
          searchResults.innerHTML = `
            <div class="search-empty">
              <i data-lucide="search-x"></i>
              <p style="font-weight: 600; margin-top: 8px;">No se encontraron resultados</p>
              <p style="font-size: 0.85rem; margin-top: 4px;">Intenta con otro t√©rmino</p>
            </div>
          `;
          lucide.createIcons();
          return;
        }
        
        // Renderizar resultados
        searchResults.innerHTML = resultados.map(envio => {
          let badgeClass = 'badge-pending';
          let iconClass = 'icon-pending';
          let iconEmoji = 'üì¶';
          let statusText = envio.estado_actual.replace(/_/g, ' ').toUpperCase();
          
          if (envio.estado_actual === 'entregado') {
            badgeClass = 'badge-completed';
            iconClass = 'icon-completed';
            iconEmoji = '‚úì';
            statusText = 'ENTREGADO';
          } else if (envio.estado_actual === 'en_transito' || envio.estado_actual === 'en_ruta_entrega') {
            badgeClass = 'badge-in-transit';
            iconClass = 'icon-in-transit';
            iconEmoji = 'üöö';
            statusText = 'EN TR√ÅNSITO';
          } else if (envio.estado_actual === 'en_preparacion') {
            badgeClass = 'badge-preparation';
            statusText = 'EN PREPARACI√ìN';
          } else if (envio.estado_actual === 'en_centro_distribucion') {
            badgeClass = 'badge-distribution';
            statusText = 'EN CENTRO DISTRIBUCI√ìN';
          }
          
          return `
            <a href="/envios/${envio.id}" class="search-result-item">
              <div class="search-result-icon ${iconClass}">
                ${iconEmoji}
              </div>
              <div class="search-result-info">
                <div class="search-result-tracking">${envio.numero_tracking}</div>
                <div class="search-result-details">
                  ${envio.nombre_empresa || 'Cliente'} ‚Üí ${envio.destino}
                </div>
              </div>
              <span class="search-result-badge ${badgeClass}">
                ${statusText}
              </span>
            </a>
          `;
        }).join('');
        
        lucide.createIcons();
        
      } catch (error) {
        console.error('Error en b√∫squeda:', error);
        searchResults.innerHTML = `
          <div class="search-empty">
            <p style="color: #ef4444; font-weight: 600;">Error al buscar</p>
          </div>
        `;
      }
    }
    
    // Event listener para el input
    if (searchInput) {
      searchInput.addEventListener('input', function(e) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          buscarEnvios(e.target.value);
        }, 300); // Debounce de 300ms
      });
      
      // Limpiar resultados al hacer focus
      searchInput.addEventListener('focus', function() {
        if (this.value.trim().length >= 2) {
          buscarEnvios(this.value);
        }
      });
    }
    
    // Cerrar resultados al hacer click fuera
    document.addEventListener('click', function(e) {
      if (searchInput && searchResults && !searchInput.contains(e.target) && !searchResults.contains(e.target)) {
        searchResults.classList.remove('show');
      }
    });
    
    // Cerrar resultados con ESC
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && searchResults) {
        searchResults.classList.remove('show');
      }
    });
    
    // ========================================
    // USER PROFILE DROPDOWN
    // ========================================
    
    const userProfileBtn = document.getElementById('userProfileBtn');
    const userDropdown = document.getElementById('userDropdown');
    
    if (userProfileBtn && userDropdown) {
      userProfileBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        userProfileBtn.classList.toggle('open');
        userDropdown.classList.toggle('show');
        lucide.createIcons();
      });
      
      // Cerrar al hacer click fuera
      document.addEventListener('click', function(e) {
        if (!userProfileBtn.contains(e.target)) {
          userProfileBtn.classList.remove('open');
          userDropdown.classList.remove('show');
        }
      });
      
      // Cerrar con ESC
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          userProfileBtn.classList.remove('open');
          userDropdown.classList.remove('show');
        }
      });
    }
    
    // ========================================
    // GR√ÅFICAS
    // ========================================
    
    // Variables globales
    let flowChart = null;
    let currentPeriodo = 'a√±o';
    let currentTipo = 'creados';
    
    // Inicializar gr√°fica
    function initFlowChart(datos) {
      const ctx = document.getElementById('flowChart');
      
      if (!ctx) return;
      
      // Destruir gr√°fica anterior si existe
      if (flowChart) {
        flowChart.destroy();
      }
      
      // Si no hay datos, mostrar mensaje
      if (!datos || datos.length === 0) {
        const chartContainer = ctx.parentElement;
        chartContainer.innerHTML = `
          <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 300px; color: #64748b;">
            <i data-lucide="bar-chart" style="width: 64px; height: 64px; margin-bottom: 16px; opacity: 0.3;"></i>
            <p style="font-weight: 600; font-size: 1.1rem;">No hay datos para este per√≠odo</p>
            <p style="font-size: 0.9rem; margin-top: 8px;">Intenta seleccionar otro rango de fechas</p>
          </div>
        `;
        lucide.createIcons();
        return;
      }
      
      const labels = datos.map(item => item.periodo);
      const values = datos.map(item => item.cantidad);
      
      flowChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [{
            label: currentTipo === 'creados' ? 'Creados' : 'Entregados',
            data: values,
            backgroundColor: currentTipo === 'creados' ? '#93c5fd' : '#3b82f6',
            borderRadius: 8,
            barPercentage: 0.6
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              callbacks: {
                label: function(context) {
                  return `${context.dataset.label}: ${context.parsed.y} env√≠os`;
                }
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: '#f1f5f9',
                drawBorder: false
              },
              border: {
                display: false
              },
              ticks: {
                font: {
                  weight: 600
                },
                stepSize: 1
              }
            },
            x: {
              grid: {
                display: false
              },
              border: {
                display: false
              },
              ticks: {
                font: {
                  weight: 600
                }
              }
            }
          }
        }
      });
    }
    
    // Cargar datos de la gr√°fica
    async function loadFlowData(periodo, tipo) {
      try {
        console.log('Cargando datos:', { periodo, tipo });
        
        const response = await fetch(`/dashboard/api/grafica-flujo?periodo=${periodo}&tipo=${tipo}`);
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const datos = await response.json();
        
        console.log('Datos recibidos:', datos);
        
        currentPeriodo = periodo;
        currentTipo = tipo;
        
        // Restaurar canvas si fue reemplazado por mensaje de "sin datos"
        const chartContainer = document.querySelector('.chart-container');
        if (!document.getElementById('flowChart')) {
          chartContainer.innerHTML = '<canvas id="flowChart"></canvas>';
        }
        
        initFlowChart(datos);
      } catch (error) {
        console.error('Error al cargar datos de gr√°fica:', error);
      }
    }
    
    // Event listeners para botones de tipo
    document.addEventListener('DOMContentLoaded', function() {
      // Botones Creados/Entregados
      const btnCreados = document.querySelector('[data-tipo="creados"]');
      const btnEntregados = document.querySelector('[data-tipo="entregados"]');
      
      if (btnCreados) {
        btnCreados.addEventListener('click', function() {
          btnCreados.classList.add('active');
          btnEntregados.classList.remove('active');
          loadFlowData(currentPeriodo, 'creados');
        });
      }
      
      if (btnEntregados) {
        btnEntregados.addEventListener('click', function() {
          btnEntregados.classList.add('active');
          btnCreados.classList.remove('active');
          loadFlowData(currentPeriodo, 'entregados');
        });
      }
      
      // Dropdown personalizado
      const dropdownTrigger = document.getElementById('dropdownTrigger');
      const dropdownMenu = document.getElementById('dropdownMenu');
      const dropdownSelected = document.getElementById('dropdownSelected');
      const dropdownItems = document.querySelectorAll('.dropdown-item');
      
      // Toggle dropdown
      if (dropdownTrigger) {
        dropdownTrigger.addEventListener('click', function(e) {
          e.stopPropagation();
          dropdownMenu.classList.toggle('show');
          lucide.createIcons();
        });
      }
      
      // Select item
      dropdownItems.forEach(item => {
        item.addEventListener('click', function(e) {
          e.stopPropagation();
          const periodo = this.getAttribute('data-periodo');
          const texto = this.textContent.trim();
          
          // Actualizar UI
          dropdownSelected.textContent = texto;
          dropdownItems.forEach(i => i.classList.remove('active'));
          this.classList.add('active');
          dropdownMenu.classList.remove('show');
          
          // Cargar datos
          loadFlowData(periodo, currentTipo);
        });
      });
      
      // Cerrar dropdown al hacer click fuera
      document.addEventListener('click', function() {
        if (dropdownMenu) {
          dropdownMenu.classList.remove('show');
        }
      });
      
      // Cargar datos iniciales
      loadFlowData('a√±o', 'creados');
    });
    
    // Budget Donut Chart
    const budgetCtx = document.getElementById('budgetChart');
    if (budgetCtx) {
      try {
        const estadosScript = document.getElementById('data-estados');
        let enviosPorEstadoData = [];
        
        if (estadosScript && estadosScript.textContent) {
          enviosPorEstadoData = JSON.parse(estadosScript.textContent);
        }
        
        if (enviosPorEstadoData.length > 0) {
          const labels = enviosPorEstadoData.map(item => item.estado_actual);
          const values = enviosPorEstadoData.map(item => item.cantidad);
          const colors = ['#3b82f6', '#2563eb', '#93c5fd'];
          
          new Chart(budgetCtx, {
            type: 'doughnut',
            data: {
              labels: labels,
              datasets: [{
                data: values,
                backgroundColor: colors,
                borderWidth: 0,
                cutout: '75%'
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                legend: {
                  display: false
                }
              }
            }
          });
        }
      } catch (e) {
        console.error('Error al cargar gr√°fica de estados:', e);
      }
    }
  </script>

