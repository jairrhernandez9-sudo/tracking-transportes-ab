            Nuevo Usuario
          </a>
          
          <a href="/envios-retrasados" class="notification-btn">
            <i data-lucide="bell"></i>
            <% if (typeof enviosRetrasados !== 'undefined' && enviosRetrasados > 0) { %>
              <span class="notification-badge"><%= enviosRetrasados %></span>
            <% } %>
          </a>
          
          <div class="user-profile" id="userProfileBtn">
            <div class="user-avatar">
              <%= user && user.nombre ? user.nombre.charAt(0).toUpperCase() : 'A' %>
            </div>
            <div class="user-info">
              <h4><%= user && user.nombre ? user.nombre : 'Administrador' %></h4>
              <p><%= user && user.email ? user.email : 'admin@tracking.com' %></p>
            </div>
            <i data-lucide="chevron-down" class="user-chevron"></i>
            
            <!-- Dropdown del perfil -->
            <div class="user-dropdown" id="userDropdown">
              <div class="user-dropdown-header">
                <div class="user-dropdown-avatar">
                  <%= user && user.nombre ? user.nombre.charAt(0).toUpperCase() : 'A' %>
                </div>
                <div class="user-dropdown-info">
                  <div class="user-dropdown-name"><%= user && user.nombre ? user.nombre : 'Administrador' %></div>
                  <div class="user-dropdown-email"><%= user && user.email ? user.email : 'admin@tracking.com' %></div>
                  <span class="user-dropdown-badge">
                    <%= user && user.rol === 'admin' ? 'Administrador' : 'Operador' %>
                  </span>
                </div>
              </div>
              
              <div class="user-dropdown-divider"></div>
              
              <a href="/mi-perfil" class="user-dropdown-item">
                <i data-lucide="user"></i>
                <span>Mi perfil</span>
              </a>
              
              <div class="user-dropdown-divider"></div>
              
              <a href="/auth/logout" class="user-dropdown-item logout">
                <i data-lucide="log-out"></i>
                <span>Cerrar sesiÃ³n</span>
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- BREADCRUMB -->
      <nav class="breadcrumb">
        <a href="/dashboard">
          <i data-lucide="home" style="width: 14px; height: 14px;"></i>
        </a>
        <span class="breadcrumb-separator">/</span>
        <span class="breadcrumb-current">Usuarios</span>
      </nav>
      
      <!-- SUCCESS MESSAGE -->
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="success-message">
          <i data-lucide="check-circle" style="width: 20px; height: 20px;"></i>
          <%= success %>
        </div>
      <% } %>
      
      <!-- STATS -->
      <div class="stats-grid">
        <div class="stat-card primary">
          <div class="stat-info">
            <h3>Total Usuarios</h3>
            <div class="stat-value"><%= usuarios.length %></div>
            <div class="stat-footer">
              <i data-lucide="users"></i>
              En el sistema
            </div>
          </div>
          <div class="stat-icon">
            <i data-lucide="users"></i>
          </div>
        </div>
        
        <div class="stat-card success">
          <div class="stat-info">
            <h3>Administradores</h3>
            <div class="stat-value"><%= usuarios.filter(u => u.rol === 'admin').length %></div>
            <div class="stat-footer">
              <i data-lucide="shield"></i>
              Acceso total
            </div>
          </div>
          <div class="stat-icon">
            <i data-lucide="shield"></i>
          </div>
        </div>
        
        <div class="stat-card warning">
          <div class="stat-info">
            <h3>Operadores</h3>
            <div class="stat-value"><%= usuarios.filter(u => u.rol === 'operador').length %></div>
            <div class="stat-footer">
              <i data-lucide="user"></i>
              Acceso limitado
            </div>
          </div>
          <div class="stat-icon">
            <i data-lucide="user"></i>
          </div>
        </div>
      </div>
      
      <!-- USERS TABLE -->
      <div class="users-container">
        <div class="users-header">
          <h2 class="users-title">
            <i data-lucide="list" style="width: 24px; height: 24px; color: #3b82f6;"></i>
            Listado de Usuarios
          </h2>
          
          <div class="filter-tabs">
            <button class="filter-tab active" data-filter="todos">Todos</button>
            <button class="filter-tab" data-filter="admin">Administradores</button>
            <button class="filter-tab" data-filter="operador">Operadores</button>
          </div>
        </div>
        
        <% if (usuarios && usuarios.length > 0) { %>
          <table class="users-table">
            <thead>
              <tr>
                <th>Usuario</th>
                <th>Rol</th>
                <th>Estado</th>
                <th>Fecha Registro</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody id="usersTableBody">
              <% usuarios.forEach(usuario => { %>
                <tr data-rol="<%= usuario.rol %>">
                  <td>
                    <div class="user-cell">
                      <div class="user-avatar-table">
                        <%= usuario.nombre.charAt(0).toUpperCase() %>
                      </div>
                      <div class="user-data">
                        <div class="user-name"><%= usuario.nombre %></div>
                        <div class="user-email"><%= usuario.email %></div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <span class="rol-badge rol-<%= usuario.rol %>">
                      <%= usuario.rol === 'admin' ? 'Administrador' : 'Operador' %>
                    </span>
                  </td>
                  <td>
                    <span class="status-badge <%= usuario.activo ? 'activo' : 'inactivo' %>">
                      <span class="status-dot"></span>
                      <%= usuario.activo ? 'Activo' : 'Inactivo' %>
                    </span>
                  </td>
                  <td><%= new Date(usuario.fecha_creacion).toLocaleDateString('es-MX', { day: '2-digit', month: 'short', year: 'numeric' }) %></td>
                  <td>
                    <div class="actions-cell">
                      <a href="/usuarios/<%= usuario.id %>" class="btn-action">
                        <i data-lucide="eye"></i>
                        Ver
                      </a>
                      <a href="/usuarios/<%= usuario.id %>/editar" class="btn-action">
                        <i data-lucide="edit"></i>
                        Editar
                      </a>
                      <% if (usuario.id !== user.id) { %>
                        <button 
                          class="btn-action delete" 
                          data-user-id="<%= usuario.id %>" 
                          data-user-name="<%= usuario.nombre %>" 
                          onclick="confirmarEliminar(this)"
                        >
                          <i data-lucide="trash-2"></i>
                          Eliminar
                        </button>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <div class="empty-state">
            <i data-lucide="users"></i>
            <h3>No hay usuarios registrados</h3>
            <p>Crea el primer usuario para comenzar</p>
          </div>
        <% } %>
      </div>
      
    </main>
    
  </div>
  
  <script>
    lucide.createIcons();
    
    // User Profile Dropdown
    const userProfileBtn = document.getElementById('userProfileBtn');
    const userDropdown = document.getElementById('userDropdown');
    
    if (userProfileBtn && userDropdown) {
      userProfileBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        userProfileBtn.classList.toggle('open');
        userDropdown.classList.toggle('show');
        lucide.createIcons();
      });
      
      document.addEventListener('click', function(e) {
        if (!userProfileBtn.contains(e.target)) {
          userProfileBtn.classList.remove('open');
          userDropdown.classList.remove('show');
        }
      });
      
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          userProfileBtn.classList.remove('open');
          userDropdown.classList.remove('show');
        }
      });
    }
    
    // Filter Tabs
    const filterTabs = document.querySelectorAll('.filter-tab');
    const tableRows = document.querySelectorAll('#usersTableBody tr');
    
    filterTabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const filter = this.dataset.filter;
        
        // Update active tab
        filterTabs.forEach(t => t.classList.remove('active'));
        this.classList.add('active');
        
        // Filter rows
        tableRows.forEach(row => {
          if (filter === 'todos') {
            row.style.display = '';
          } else {
            row.style.display = row.dataset.rol === filter ? '' : 'none';
          }
        });
      });
    });
    
    // Search
    const searchInput = document.getElementById('searchInput');
    if (searchInput) {
      searchInput.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        
        tableRows.forEach(row => {
          const userName = row.querySelector('.user-name').textContent.toLowerCase();
          const userEmail = row.querySelector('.user-email').textContent.toLowerCase();
          
          if (userName.includes(searchTerm) || userEmail.includes(searchTerm)) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      });
    }
    
    // Delete confirmation - âœ… CORREGIDO
    function confirmarEliminar(button) {
      const id = button.getAttribute('data-user-id');
      const nombre = button.getAttribute('data-user-name');
      
      if (confirm(`Â¿EstÃ¡s seguro de eliminar al usuario "${nombre}"?\n\nEsta acciÃ³n no se puede deshacer.`)) {
        // Crear formulario y enviar
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/usuarios/${id}/eliminar`;
        document.body.appendChild(form);
        form.submit();
      }
    }
  </script>
</body>
</html>