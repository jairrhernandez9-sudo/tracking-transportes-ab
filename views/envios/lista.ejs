        <p style="color: #64748b; margin-bottom: 20px; font-size: 0.95rem;">
          Est치s a punto de cancelar el env칤o <span class="modal-tracking" id="trackingCancelar"></span>
        </p>
        
        <div class="form-group">
          <label class="form-label required">Motivo de cancelaci칩n</label>
          <select id="motivoCancelacion" class="form-select" required>
            <option value="">Selecciona un motivo...</option>
            <option value="solicitud_cliente">Solicitud del cliente</option>
            <option value="direccion_incorrecta">Direcci칩n incorrecta</option>
            <option value="pago_rechazado">Pago rechazado</option>
            <option value="producto_no_disponible">Producto no disponible</option>
            <option value="duplicado">Env칤o duplicado</option>
            <option value="otro">Otro motivo</option>
          </select>
        </div>
        
        <div class="form-group">
          <label class="form-label">Comentarios adicionales</label>
          <textarea id="comentariosCancelacion" class="form-textarea" placeholder="Describe los detalles de la cancelaci칩n..."></textarea>
        </div>
        
        <div class="alert alert-warning">
          <i data-lucide="alert-triangle" style="width: 20px; height: 20px;"></i>
          Esta acci칩n quedar치 registrada en el historial del env칤o
        </div>
      </div>
      
      <div class="modal-footer">
        <button class="btn btn-secondary" onclick="cerrarModalCancelar()">
          <i data-lucide="arrow-left" style="width: 18px; height: 18px;"></i>
          Volver
        </button>
        <button class="btn btn-warning" onclick="confirmarCancelacion()">
          <i data-lucide="x-circle" style="width: 18px; height: 18px;"></i>
          Cancelar Env칤o
        </button>
      </div>
    </div>
  </div>
  
  <script>
    lucide.createIcons();
    
    // User Profile Dropdown
    const userProfileBtn = document.getElementById('userProfileBtn');
    const userDropdown = document.getElementById('userDropdown');
    
    if (userProfileBtn && userDropdown) {
      userProfileBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        userProfileBtn.classList.toggle('open');
        userDropdown.classList.toggle('show');
        lucide.createIcons();
      });
      
      document.addEventListener('click', function(e) {
        if (!userProfileBtn.contains(e.target)) {
          userProfileBtn.classList.remove('open');
          userDropdown.classList.remove('show');
        }
      });
      
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          userProfileBtn.classList.remove('open');
          userDropdown.classList.remove('show');
        }
      });
    }
    
    // Variables globales para cancelaci칩n
    let envioIdCancelar = null;
    
    // Delegaci칩n de eventos para botones de cancelar
    document.addEventListener('DOMContentLoaded', function() {
      document.addEventListener('click', function(e) {
        const cancelBtn = e.target.closest('.btn-icon.cancel');
        if (cancelBtn) {
          const id = cancelBtn.getAttribute('data-id');
          const tracking = cancelBtn.getAttribute('data-tracking');
          abrirModalCancelar(id, tracking);
        }
      });
    });
    
    // Abrir modal de cancelaci칩n
    function abrirModalCancelar(id, tracking) {
      envioIdCancelar = id;
      document.getElementById('trackingCancelar').textContent = tracking;
      document.getElementById('modalCancelar').classList.add('show');
      document.getElementById('motivoCancelacion').value = '';
      document.getElementById('comentariosCancelacion').value = '';
      lucide.createIcons();
    }
    
    // Cerrar modal de cancelaci칩n
    function cerrarModalCancelar() {
      document.getElementById('modalCancelar').classList.remove('show');
      envioIdCancelar = null;
    }
    
    // Confirmar cancelaci칩n
    async function confirmarCancelacion() {
      const motivo = document.getElementById('motivoCancelacion').value;
      const comentarios = document.getElementById('comentariosCancelacion').value;
      
      if (!motivo) {
        alert('Por favor selecciona un motivo de cancelaci칩n');
        return;
      }
      
      try {
        // Crear texto del comentario
        const motivosTexto = {
          'solicitud_cliente': 'Solicitud del cliente',
          'direccion_incorrecta': 'Direcci칩n incorrecta',
          'pago_rechazado': 'Pago rechazado',
          'producto_no_disponible': 'Producto no disponible',
          'duplicado': 'Env칤o duplicado',
          'otro': 'Otro motivo'
        };
        
        let comentarioFinal = `Cancelado: ${motivosTexto[motivo]}`;
        if (comentarios) {
          comentarioFinal += `. ${comentarios}`;
        }
        
        const response = await fetch(`/envios/${envioIdCancelar}/cancelar`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            motivo: motivo,
            comentarios: comentarioFinal
          })
        });
        
        const result = await response.json();
        
        if (result.success) {
          cerrarModalCancelar();
          alert('Env칤o cancelado correctamente');
          window.location.reload();
        } else {
          alert('Error: ' + result.message);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al cancelar el env칤o');
      }
    }
    
    // Cerrar modal con tecla ESC
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        cerrarModalCancelar();
      }
    });
    
    // Cerrar modal al hacer click fuera
    document.getElementById('modalCancelar')?.addEventListener('click', function(e) {
      if (e.target === this) {
        cerrarModalCancelar();
      }
    });
  </script>
