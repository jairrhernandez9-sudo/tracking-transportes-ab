async function cargarDireccionesDestino(clienteId) {
  const select = document.getElementById('direccionDestinoSelect');
  
  if (!clienteId) {
    select.disabled = true;
    select.innerHTML = '<option value="">Primero selecciona un cliente...</option>';
    return;
  }
  
  try {
    const response = await fetch(`/direcciones/cliente/${clienteId}`);
    const data = await response.json();
    
    select.innerHTML = '<option value="">üìù Ingresar manualmente...</option>';
    
    if (data.success && data.direcciones && data.direcciones.length > 0) {
      data.direcciones.forEach(dir => {
        const option = document.createElement('option');
        option.value = dir.id;
        option.textContent = `${dir.es_predeterminada ? '‚≠ê ' : ''}${dir.alias} - ${dir.ciudad}, ${dir.estado}`;
