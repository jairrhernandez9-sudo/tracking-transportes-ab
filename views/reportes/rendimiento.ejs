    </aside>
    
    <!-- MAIN CONTENT -->
    <main class="main-content">
      
      <!-- HEADER -->
      <header class="page-header">
        <div class="header-left">
          <a href="/reportes" class="back-btn" title="Volver a reportes">
            <i data-lucide="arrow-left" style="width: 20px; height: 20px;"></i>
          </a>
          <div class="page-title-section">
            <h1 class="page-title"><span class="title-icon">üìà</span> Reporte de Rendimiento</h1>
