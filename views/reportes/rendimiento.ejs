        </a>
        <span class="breadcrumb-separator">/</span>
        <a href="/reportes">Reportes</a>
        <span class="breadcrumb-separator">/</span>
        <span class="breadcrumb-current">Rendimiento</span>
      </nav>
      
      <!-- STATS -->
      <div class="stats-grid">
        <div class="stat-card primary">
          <div class="stat-header">
            <div class="stat-info">
              <h3>Tiempo Promedio</h3>
              <div class="stat-value"><%= Math.round(tiempoPromedio) %></div>
              <div class="stat-footer">
                <i data-lucide="clock"></i>
                D√≠as de entrega
              </div>
            </div>
            <div class="stat-icon">
              <i data-lucide="clock"></i>
            </div>
          </div>
        </div>
        
        <%
          const totalEficiencia = eficiencia.reduce((sum, e) => sum + parseInt(e.total || 0), 0);
          const entregadosEficiencia = eficiencia.find(e => e.estado_actual === 'entregado');
          const tasaExito = totalEficiencia > 0 && entregadosEficiencia ? ((entregadosEficiencia.total / totalEficiencia) * 100).toFixed(1) : 0;
        %>
        
        <div class="stat-card success">
          <div class="stat-header">
            <div class="stat-info">
              <h3>Tasa de √âxito</h3>
              <div class="stat-value"><%= tasaExito %>%</div>
              <div class="stat-footer">
                <i data-lucide="trending-up"></i>
                Entregas exitosas
              </div>
            </div>
            <div class="stat-icon">
              <i data-lucide="trending-up"></i>
            </div>
          </div>
        </div>
        
        <div class="stat-card warning">
          <div class="stat-header">
            <div class="stat-info">
              <h3>Retrasados</h3>
              <div class="stat-value"><%= retrasados.length %></div>
              <div class="stat-footer">
                <i data-lucide="alert-triangle"></i>
                Requieren atenci√≥n
              </div>
            </div>
            <div class="stat-icon">
              <i data-lucide="alert-triangle"></i>
            </div>
          </div>
        </div>
        
        <div class="stat-card info">
          <div class="stat-header">
            <div class="stat-info">
              <h3>Top Clientes</h3>
              <div class="stat-value"><%= topClientes.length %></div>
              <div class="stat-footer">
                <i data-lucide="award"></i>
                Mayor volumen
              </div>
            </div>
            <div class="stat-icon">
              <i data-lucide="award"></i>
            </div>
          </div>
        </div>
      </div>
      
      <!-- TWO COLUMN LAYOUT -->
      <div class="two-column-grid">
        
        <!-- TOP 5 CLIENTES -->
        <div class="content-card">
          <div class="card-header">
            <h2 class="card-title">
              <i data-lucide="trophy" style="width: 24px; height: 24px; color: #f59e0b;"></i>
              Top 5 Clientes por Volumen
            </h2>
          </div>
          
          <% if (topClientes && topClientes.length > 0) { %>
            <% topClientes.forEach((cliente, index) => { 
              let rankClass = '';
              if (index === 0) rankClass = 'gold';
              else if (index === 1) rankClass = 'silver';
              else if (index === 2) rankClass = 'bronze';
            %>
              <div class="top-cliente">
                <div class="rank-badge <%= rankClass %>"><%= index + 1 %></div>
                <div class="cliente-info">
                  <div class="cliente-name"><%= cliente.nombre_empresa %></div>
                  <div class="cliente-stats">
                    <%= cliente.entregados %> de <%= cliente.total_envios %> entregados
                  </div>
                </div>
                <div class="envios-count"><%= cliente.total_envios %></div>
              </div>
            <% }); %>
          <% } else { %>
            <p style="text-align: center; padding: 40px; color: #6b7280;">No hay datos de clientes</p>
          <% } %>
        </div>
        
        <!-- EFICIENCIA POR ESTADO -->
        <div class="content-card">
          <div class="card-header">
            <h2 class="card-title">
              <i data-lucide="pie-chart" style="width: 24px; height: 24px; color: #3b82f6;"></i>
              Distribuci√≥n por Estado
            </h2>
          </div>
          
          <% if (eficiencia && eficiencia.length > 0) { %>
            <% eficiencia.forEach(item => { %>
              <div class="eficiencia-item">
                <div class="eficiencia-label">
                  <%= item.estado_actual.replace('-', ' ').replace('_', ' ').toUpperCase() %>
                </div>
                <div class="eficiencia-value">
  <div class="eficiencia-number"><%= item.total %></div>
  <div class="progress-bar">
    <div class="progress-fill" data-width="<%= item.porcentaje %>"></div>
  </div>
  <div class="eficiencia-percent"><%= item.porcentaje %>%</div>
</div>
              </div>
            <% }); %>
          <% } else { %>
            <p style="text-align: center; padding: 40px; color: #6b7280;">No hay datos de eficiencia</p>
          <% } %>
        </div>
        
      </div>
      
      <!-- ENVIOS RETRASADOS -->
      <div class="content-card">
        <div class="card-header">
          <h2 class="card-title">
            <i data-lucide="alert-circle" style="width: 24px; height: 24px; color: #ef4444;"></i>
            Env√≠os Retrasados (<%= retrasados.length %>)
          </h2>
        </div>
        
        <% if (retrasados && retrasados.length > 0) { %>
          <table class="data-table">
            <thead>
              <tr>
                <th>Tracking</th>
                <th>Cliente</th>
                <th>Destino</th>
                <th>D√≠as de Retraso</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% retrasados.slice(0, 10).forEach(envio => { %>
                <tr>
                  <td class="tracking-cell"><%= envio.numero_tracking %></td>
                  <td><%= envio.nombre_empresa || 'N/A' %></td>
                  <td><%= envio.destino || 'N/A' %></td>
                  <td>
                    <span class="retraso-badge">
                      <%= envio.dias_retraso %> <%= envio.dias_retraso === 1 ? 'd√≠a' : 'd√≠as' %>
                    </span>
                  </td>
                  <td>
                    <a href="/envios/<%= envio.id %>" class="btn-ver">
                      <i data-lucide="eye"></i>
                      Ver
                    </a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
          
          <% if (retrasados.length > 10) { %>
            <p style="text-align: center; padding: 20px; color: #6b7280; font-size: 0.9rem;">
              Mostrando los 10 env√≠os con mayor retraso. Total: <%= retrasados.length %>
            </p>
          <% } %>
        <% } else { %>
          <p style="text-align: center; padding: 40px; color: #10b981; font-weight: 600;">
            üéâ ¬°Excelente! No hay env√≠os retrasados
          </p>
        <% } %>
      </div>
      
    </main>
    
  </div>
  
<script>
  lucide.createIcons();
  
  // User Profile Dropdown
  const userProfileBtn = document.getElementById('userProfileBtn');
  const userDropdown = document.getElementById('userDropdown');
  
  if (userProfileBtn && userDropdown) {
    userProfileBtn.addEventListener('click', function(e) {
      e.stopPropagation();
      userProfileBtn.classList.toggle('open');
      userDropdown.classList.toggle('show');
      lucide.createIcons();
    });
    
    document.addEventListener('click', function(e) {
      if (!userProfileBtn.contains(e.target)) {
        userProfileBtn.classList.remove('open');
        userDropdown.classList.remove('show');
      }
    });
    
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        userProfileBtn.classList.remove('open');
        userDropdown.classList.remove('show');
      }
    });
  }
  
  // Aplicar anchos de barras de progreso
  document.addEventListener('DOMContentLoaded', function() {
    const progressBars = document.querySelectorAll('.progress-fill');
    progressBars.forEach(bar => {
      const width = bar.getAttribute('data-width');
      bar.style.width = width + '%';
    });
  });
  
  // Exportar Excel
  function exportarExcel() {
    alert('Funci√≥n de exportaci√≥n a Excel en desarrollo...');
    // Aqu√≠ ir√° la l√≥gica de exportaci√≥n
  }
</script>
</body>
