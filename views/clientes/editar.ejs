            </div>
            
            <!-- RFC -->
            <div class="form-group">
              <label class="form-label">
                <i data-lucide="file-text"></i>
                RFC
              </label>
              <input 
                type="text" 
                name="rfc" 
                class="form-input" 
                placeholder="Ej: ABC123456XYZ"
                value="<%= cliente.rfc || '' %>"
                maxlength="13"
                style="text-transform: uppercase;"
              >
