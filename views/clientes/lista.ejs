    </main>
    
  </div>
  
  <script>
    lucide.createIcons();
    
    // User Profile Dropdown
    const userProfileBtn = document.getElementById('userProfileBtn');
    const userDropdown = document.getElementById('userDropdown');
    
    if (userProfileBtn && userDropdown) {
      userProfileBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        userProfileBtn.classList.toggle('open');
        userDropdown.classList.toggle('show');
        lucide.createIcons();
      });
      
      document.addEventListener('click', function(e) {
        if (!userProfileBtn.contains(e.target)) {
          userProfileBtn.classList.remove('open');
          userDropdown.classList.remove('show');
        }
      });
      
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          userProfileBtn.classList.remove('open');
          userDropdown.classList.remove('show');
        }
      });
    }
    
    // BÃºsqueda en tiempo real
    const searchInput = document.getElementById('searchInput');
    const clientesGrid = document.getElementById('clientesGrid');
    
    if (searchInput && clientesGrid) {
      searchInput.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const cards = clientesGrid.getElementsByClassName('cliente-card');
        
        Array.from(cards).forEach(card => {
          const text = card.textContent.toLowerCase();
          card.style.display = text.includes(searchTerm) ? '' : 'none';
        });
      });
    }
    
    // Eliminar cliente con event delegation (CORREGIDO)
    document.addEventListener('click', async function(e) {
      const btnEliminar = e.target.closest('.btn-eliminar');
      if (!btnEliminar) return;
      
      const id = btnEliminar.dataset.clienteId;
      const nombre = btnEliminar.dataset.clienteNombre;
      
      if (!confirm(`Â¿EstÃ¡s seguro de eliminar al cliente "${nombre}"?\n\nEsta acciÃ³n no se puede deshacer.`)) {
        return;
      }
      
      try {
        const response = await fetch(`/clientes/${id}/eliminar`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        
        const result = await response.json();
        
        if (result.success) {
          alert('Cliente eliminado exitosamente');
          location.reload();
        } else {
          alert(result.message || 'Error al eliminar el cliente');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al eliminar el cliente');
      }
    });
  </script>

