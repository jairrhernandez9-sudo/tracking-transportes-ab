                <div class="stat-box">
                  <div class="stat-label">Desde</div>
                  <div class="stat-value" style="font-size: 1rem;">
                    <%= new Date(cliente.fecha_creacion).toLocaleDateString('es-MX', { month: 'short', year: 'numeric' }) %>
                  </div>
                </div>
                <div class="stat-box">
                  <div class="stat-label">ID</div>
                  <div class="stat-value" style="font-size: 1.2rem;"><%= cliente.id %></div>
