                    <span><%= cliente.email %></span>
                  </div>
                <% } %>
                
                <% if (cliente.telefono) { %>
                  <div class="info-row">
                    <i data-lucide="phone"></i>
                    <span><%= cliente.telefono %></span>
                  </div>
